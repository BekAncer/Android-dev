<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imagePizza"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/pizza"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPizzaName"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toEndOf="@+id/imagePizza"
        app:layout_constraintTop_toBottomOf="@id/imagePizza"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPizzaDescription"
        android:layout_width="186dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#4C4C4C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPizzaName" />

    <Button
        android:id="@+id/costView"
        android:layout_width="152dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded"
        android:clickable="false"
        android:textColor="#9A4023"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imagePizza"
        app:layout_constraintTop_toBottomOf="@+id/textPizzaDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>